@model WebApplicationAPP.Models.Inventario

<h1>Eliminar Inventario</h1>
<p>¿Desea eliminar el Inventario?</p>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label">Precio</label>
        <input asp-for="Precio" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stock</label>
        <input asp-for="Stock" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Categoria" class="form-label">Categoría</label>
        <input asp-for="Categoria" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
        <input asp-for="FechaRegistro" class="form-control" readonly />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Estado" class="form-check-input" type="checkbox" disabled />
        <label asp-for="Estado" class="form-check-label">Activo</label>
    </div>


    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
