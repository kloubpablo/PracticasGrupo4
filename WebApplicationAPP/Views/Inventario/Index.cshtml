@model List<WebApplicationAPP.Models.Inventario>

<h1>Lista de Inventario</h1>

<button class="btn btn-secondary">
    <a asp-action="Create">Registrar Inventario</a>
</button>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categoría</th>
        <th>Estado</th>
        <th>Acciones</th>


    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>₡@item.Precio</td>
            <td>@item.Stock</td>
            <td>@item.Categoria</td>
            <td>@(item.Estado ? "Activo" : "Inactivo")</td>
            <td>
                <a class="btn btn-success"
                   asp-action="Details" asp-route-id="@item.Id"
                   role="button">Detalles</a>

                <a class="btn btn-warning"
                   asp-action="Edit" asp-route-id="@item.Id"
                   role="button">Editar</a>

                <a class="btn btn-danger"
                   asp-action="Delete" asp-route-id="@item.Id"
                   role="button">Eliminar</a>
            </td>
        </tr>
    }
    

  
 
</table>
