@model WebApplicationAPP.Models.Inventario

<h1>Detalles</h1>

<p>
    Id: @Model.Id
</p>

<p>
    Nombre: @Model.Nombre
</p>

<p>
    Descripción: @Model.Descripcion
</p>

<p>
    Precio: ₡@Model.Precio
</p>

<p>
    Stock: @Model.Stock
</p>

<p>
    Categoría: @Model.Categoria
</p>

<p>
    Fecha de Registro: @Model.FechaRegistro.ToString("dd/MM/yyyy")
</p>

<p>
    Estado: @(Model.Estado ? "Activo" : "Inactivo")
</p>


<a asp-action="Index">Regresar a la lista</a>