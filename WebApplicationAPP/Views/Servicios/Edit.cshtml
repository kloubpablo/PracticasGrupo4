@model WebApplicationAPP.Models.Servicios

@{
    ViewBag.Title = "Editar Servicio";
}

<h2>Editar Servicio</h2>

<form asp-action="Edit" method="post">

    @* Id oculto para que sí se envíe en el POST *@
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text"
               class="form-control"
               asp-for="Id"
               disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text"
               class="form-control"
               placeholder="Ingrese el nombre del servicio"
               asp-for="Nombre" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <input type="text"
               class="form-control"
               placeholder="Ingrese la descripción"
               asp-for="Descripcion" />
    </div>

    <div class="mb-3">
        <label class="form-label">Monto</label>
        <input type="number"
               step="0.01"
               class="form-control"
               asp-for="Monto" />
    </div>

    <div class="mb-3">
        <label class="form-label">IVA</label>
        <input type="number"
               step="0.01"
               class="form-control"
               asp-for="IVA" />
    </div>

    <div class="mb-3">
        <label class="form-label">Área Servicio</label>
        <input type="number"
               class="form-control"
               asp-for="AreaServicio" />
    </div>

    <div class="mb-3">
        <label class="form-label">Encargado</label>
        <input type="text"
               class="form-control"
               asp-for="Encargado" />
    </div>

    <div class="mb-3">
        <label class="form-label">Sucursal</label>
        <input type="text"
               class="form-control"
               asp-for="Sucursal" />
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <div class="form-check">
            <input class="form-check-input"
                   type="checkbox"
                   asp-for="Estado" />
            <label class="form-check-label">
                Activo
            </label>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="Index"
           class="btn btn-danger"
           role="button">Cancelar</a>

        <button type="submit"
                class="btn btn-primary">
            Guardar Cambios
        </button>
    </div>

</form>