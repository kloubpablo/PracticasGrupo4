@model WebApplicationAPP.Models.Servicios

@{
    ViewBag.Title = "Registrar Servicio";
}

<h2>Registrar Servicio</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text"
               class="form-control"
               aria-describedby="helpNombre"
               placeholder="Ingrese el nombre del servicio"
               asp-for="Nombre" />
        <small id="helpNombre" class="form-text text-muted">Help Nombre</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <input type="text"
               class="form-control"
               aria-describedby="helpDescripcion"
               placeholder="Ingrese la descripción"
               asp-for="Descripcion" />
        <small id="helpDescripcion" class="form-text text-muted">Help Descripción</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Monto</label>
        <input type="number"
               step="0.01"
               class="form-control"
               aria-describedby="helpMonto"
               placeholder="Ingrese el monto"
               asp-for="Monto" />
        <small id="helpMonto" class="form-text text-muted">Help Monto</small>
    </div>

    <div class="mb-3">
        <label class="form-label">IVA</label>
        <input type="number"
               step="0.01"
               class="form-control"
               aria-describedby="helpIVA"
               placeholder="Ingrese el IVA"
               asp-for="IVA" />
        <small id="helpIVA" class="form-text text-muted">Help IVA</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Área Servicio</label>
        <input type="number"
               class="form-control"
               aria-describedby="helpArea"
               placeholder="Ingrese el área de servicio"
               asp-for="AreaServicio" />
        <small id="helpArea" class="form-text text-muted">Help Área Servicio</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Encargado</label>
        <input type="text"
               class="form-control"
               aria-describedby="helpEncargado"
               placeholder="Ingrese el encargado"
               asp-for="Encargado" />
        <small id="helpEncargado" class="form-text text-muted">Help Encargado</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Sucursal</label>
        <input type="text"
               class="form-control"
               aria-describedby="helpSucursal"
               placeholder="Ingrese la sucursal"
               asp-for="Sucursal" />
        <small id="helpSucursal" class="form-text text-muted">Help Sucursal</small>
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>

        <div class="form-check">
            <input class="form-check-input"
                   type="checkbox"
                   asp-for="Estado" />
            <label class="form-check-label">Activo</label>
        </div>

        <small class="form-text text-muted">Help Estado</small>
    </div>

    <div class="mb-3">
        <a asp-action="Index"
           class="btn btn-danger"
           role="button">Cancelar</a>

        <button type="submit"
                class="btn btn-primary">
            Enviar
        </button>
    </div>

</form>