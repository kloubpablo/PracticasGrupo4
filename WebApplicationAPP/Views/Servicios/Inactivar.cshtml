@model WebApplicationAPP.Models.Servicios

@{
    ViewBag.Title = "Inactivar Servicio";
}

<h2>Inactivar Servicio</h2>

<div class="alert alert-warning">
    ¿Está seguro que desea inactivar este servicio?
</div>

<div class="card mt-3">
    <div class="card-body">


        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Monto</dt>
            <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>

            <dt class="col-sm-3">IVA</dt>
            <dd class="col-sm-9">@Model.IVA.ToString("C")</dd>

            <dt class="col-sm-3">Área</dt>
            <dd class="col-sm-9">@Model.AreaServicio</dd>

            <dt class="col-sm-3">Encargado</dt>
            <dd class="col-sm-9">@Model.Encargado</dd>

            <dt class="col-sm-3">Sucursal</dt>
            <dd class="col-sm-9">@Model.Sucursal</dd>

            <dt class="col-sm-3">Estado actual</dt>
            <dd class="col-sm-9">
                @(Model.Estado ? "Activo" : "Inactivo")
            </dd>
        </dl>

        <form asp-action="Inactivar" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">
                Confirmar Inactivación
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                Cancelar
            </a>
        </form>

    </div>
</div>