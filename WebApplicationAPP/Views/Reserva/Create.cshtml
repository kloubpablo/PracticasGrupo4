@model WebApplicationAPP.Models.Reserva
@using Microsoft.AspNetCore.Mvc.Rendering

<h1>Crear Reserva</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="NombreDelAsociado"></label>
        <input asp-for="NombreDelAsociado" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Identificacion"></label>
        <input asp-for="Identificacion" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" type="email" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaNacimiento"></label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaDelServicio"></label>
        <input asp-for="FechaDelServicio" type="date" class="form-control" />
    </div>

    <input asp-for="FechaDeRegistro" type="hidden" />

    <div class="mb-3">
        <label>Servicio</label>
        <select asp-for="IdServicio" class="form-select" asp-items="@(new SelectList(ViewBag.Servicios, "Id", "Nombre"))">
            <option value="">Seleccione servicio</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
