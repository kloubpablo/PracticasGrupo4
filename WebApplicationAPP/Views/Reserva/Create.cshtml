@model WebApplicationAPP.Models.Reserva
@using Microsoft.AspNetCore.Mvc.Rendering

<h1>Crear Reserva</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="IdUsuario" class="form-label">Usuario</label>
        <select asp-for="IdUsuario"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Usuarios, "IdUsuario", "Nombre"))">
            <option value="">Seleccione un usuario</option>
        </select>
        <span asp-validation-for="IdUsuario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdLaboratorio" class="form-label">Laboratorio</label>
        <select asp-for="IdLaboratorio"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Laboratorios, "IdLaboratorio", "Nombre"))">
            <option value="">Seleccione un laboratorio</option>
        </select>
        <span asp-validation-for="IdLaboratorio" class="text-danger"></span>
    </div>

    <!-- FechaHora se envía automáticamente, el usuario no la edita -->
    <input asp-for="FechaHora" type="datetime-local" class="form-control d-none" />

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const inputFecha = document.querySelector('input[name="FechaHora"]');
            if (inputFecha) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                inputFecha.value = now.toISOString().slice(0, 16);
            }
        });
    </script>
}