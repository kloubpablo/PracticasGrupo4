@model List<WebApplicationAPP.Models.User>

<h2>Usuarios</h2>

<a asp-action="Create" class="btn btn-primary">
    Nuevo Usuario
</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Correo</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Tipo</td>
                <td>@item.Correo</td>

                <td>
                    <a asp-action="Delete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
